import React from 'react';

const LayoutHeader = ({ onLoginRegisterClick, onLogout, isLoggedIn, setCurrentPage, isAdmin }) => {
  return (
    <header className="p-4 bg-gray-800 shadow-sm border-b border-gray-800">
      <div className="max-w-7xl mx-auto flex items-center justify-between">
        {/* Logo */}
        <div className="flex-shrink-0">
          <h1 className="text-2xl font-bold text-white">CulturaBog</h1>
        </div>

        {/* Navegación centrada */}
        <nav className="flex-grow mx-4">
          <ul className="flex justify-center space-x-4 text-white text-sm font-medium">
            <li>
              <button onClick={() => setCurrentPage('landing')} className="hover:text-blue-600 transition-colors">
                Inicio
              </button>
            </li>
            <li>
              <button onClick={() => setCurrentPage('explore')} className="hover:text-blue-600 transition-colors">
                Explorar
              </button>
            </li>
            <li>
              <button onClick={() => setCurrentPage('recommendations')} className="hover:text-blue-600 transition-colors">
                Recomendaciones
              </button>
            </li>
            <li>
              <button onClick={() => setCurrentPage('calendar')} className="hover:text-blue-600 transition-colors">
                Calendario
              </button>
            </li>
            <li>
              <button onClick={() => setCurrentPage('profile')} className="hover:text-blue-600 transition-colors">
                Perfil
              </button>
            </li>
            {isAdmin && (
              <>
                <li>
                  <button onClick={() => setCurrentPage('addEvent')} className="hover:text-blue-600 transition-colors">
                    + Evento
                  </button>
                </li>
                <li>
                  <button onClick={() => setCurrentPage('userManagement')} className="hover:text-blue-600 transition-colors">
                    Usuarios
                  </button>
                </li>
              </>
            )}
          </ul>
        </nav>

        {/* Botón de sesión */}
        <div className="flex-shrink-0">
          {isLoggedIn ? (
            <button
              onClick={onLogout}
              className="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors shadow-md text-sm"
            >
              Cerrar Sesión
            </button>
          ) : (
            <button
              onClick={onLoginRegisterClick}
              className="px-4 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors shadow-md text-sm"
            >
              Iniciar Sesión
            </button>
          )}
        </div>
      </div>
    </header>
  );
};

export default LayoutHeader;
